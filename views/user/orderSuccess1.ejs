<%- include("header") %>

    <div class="container mt-4 mb-4">
        <div class="row d-flex cart align-items-center justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="d-flex justify-content-center border-bottom">
                        <div class="p-3">
                            <div class="progresses">
                                <div class="steps"> <span class="font-weight-bold"></span> </div> <span
                                    class="line"></span>
                                <!-- <div class="steps"> <span><i class="fa fa-check"></i></span> </div> <span class="line"></span> -->
                                <div class="steps"> <span ><i class="fa fa-check"></i></span> </div>
                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-md-6 border-right p-5">
                            <div class="text-center order-details">
                                <div class="d-flex justify-content-center mb-5 flex-column align-items-center"> <span
                                        class="check1"><i class="fa fa-check"></i></span> <span
                                        class="font-weight-bold">Order Confirmed</span> <small class="mt-2">Your orderID
                                        is <%= order._id %> </small> <a href="#"
                                        class="text-decoration-none invoice-link">View Invoice</a> </div>
                                <a href="/orderDet?id=<%= order._id %>">
                                    <button class="btn btn-danger btn-block order-button">Go to your Order</button>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 background-muted">
                            <div class="p-3 border-bottom">
                                <% for (const product of products) { %>
                                    <li style="list-style-type: none;">
                                        <div class="left">
                                            <img src="/admin/assets/productsImages/<%= product.image.length > 0 ? product.image[0].trim() : 'No image available' %>"
                                                width="40" height="40" class="img-xs" alt="Item">
                                        </div>
                                        <div class="info">
                                            <%= product.productName %>
                                        </div>
                                        <!-- Add other fields as needed -->
                                    </li>
                                    <% } %>
                                        <a class="itemside" href="#"></a>
                            </div>
                            <div class="row g-0 border-bottom">
                                <div class="col-md-6 border-right">
                                    <ul>
                                       <% let totalQuantity = 0 %>
                                        <% order.products.forEach(productObj=> { %>
                                            <% totalQuantity += productObj.quantity %>
                                            <li>
                                                <div class="p-3 d-flex justify-content-center align-items-center">
                                                    <span>x<%= productObj.quantity %></span>
                                                </div>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <% products.forEach(product=> { %>
                                        <div class="p-3 d-flex justify-content-center align-items-center"> <span><%= product.salePrice %> per
                                            unit</span>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            
                            <div class="row g-0 border-bottom">
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center"> <span>Discount
                                            </span> </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span><%= order.discountedPrice %></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-0">
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center"> <span
                                            class="font-weight-bold">Total</span> </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center"> <span
                                            class="font-weight-bold"><%= order.grandTotal %></span> </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div> </div>
                </div>
            </div>
        </div>
    </div>


    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap");

        body {
            background-color: #eee;
            font-family: "Poppins", sans-serif;
            font-weight: 300
        }

        .cart {
            height: 100vh
        }

        .progresses {
            display: flex;
            align-items: center
        }

        .line {
            width: 76px;
            height: 6px;
            background: #63d19e
        }

        .steps {
            display: flex;
            background-color: #63d19e;
            color: #fff;
            font-size: 12px;
            width: 30px;
            height: 30px;
            align-items: center;
            justify-content: center;
            border-radius: 50%
        }

        .check1 {
            display: flex;
            background-color: #63d19e;
            color: #fff;
            font-size: 17px;
            width: 60px;
            height: 60px;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-bottom: 10px
        }

        .invoice-link {
            font-size: 15px
        }

        .order-button {
            height: 50px
        }

        .background-muted {
            background-color: #fafafc
        }
    </style>
    <%- include ('footer') %>