                                                <a href="/productDetails?id=<%- product[i]._id %>">
                                                    <img class="default-img"
                                                        src="/admin/assets/productsImages/<%- product[i].image[0] %>"
                                                        alt="" style="max-height: 80%; max-width: 90%;">
                                                </a>
                                            </div>
                                        </div>
                                        <div class="product-content-wrap">
                                            <h2 class="product-name"><a href="shop-product-right.html"><%-
                                                        product[i].productName %></a></h2>

                                            <div class="product-price">
                                                <span>₹<%- product[i].salePrice %></span>
                                                <span class="old-price">₹<%- product[i].regularPrice %></span>
                                            </div>
                                            <div class="product-action-1 show">
                                                <a aria-label="Add To Cart" class="action-btn hover-up"
                                                    href="/addToCart"><i class="fi-rs-shopping-bag-add"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-lg-3 primary-sidebar sticky-sidebar">
                        <button id="clearFilterBtn" style="display: none; position: sticky; top: 20px; z-index: 999; background-color: #4CAF50; color: white; border-radius: 5px; padding: 10px; border: none; cursor: pointer;">Clear Filter</button>
                    
                        <div class="widget-category mb-30">
                            <h5 class="section-title style-1 mb-30 wow fadeIn animated">Category</h5>
                            <form id="filterForm" action="/shop" method="get">
                                <label for="categoryId">Select Category:</label>
                                <select name="categoryId" id="categoryId">
                                    <!-- Options for categories -->
                                    <% for (let i = 0; i < Category.length; i++) { %>
                                        <option value="<%- Category[i]._id %>"><%- Category[i].name %></option>
                                    <% } %>
                                </select>
                    
                                <label for="priceRange">Select Price Range:</label>
                                <select name="priceRange" id="priceRange">
                                    <option value="">All Products</option> <!-- No default selected value -->
                                    <option value="1000">Up to 1000</option>
                                    <option value="2000">Up to 2000</option>
                                    <option value="3000">Up to 3000</option>
                                    <option value="4000">Up to 4000</option>
                                </select>
                    
                                <button type="submit">Apply Filter</button>
                            </form>
                        </div>
                    </div>
                    
                    <script>
                        document.getElementById('filterForm').addEventListener('submit', function (event) {
                            // Prevent the form from submitting the traditional way
                            event.preventDefault();
                    
                            // Get selected category and price range values
                            const categoryId = document.getElementById('categoryId').value;
                            const priceRange = document.getElementById('priceRange').value;
                    
                            // Construct the URL with both selected values
                            const url = `/shop?categoryId=${categoryId}&priceRange=${priceRange}`;
                    
                            // Redirect to the constructed URL
                            window.location.href = url;
                        });
                    </script>
                    
                    
                    
                    
                    
                    
