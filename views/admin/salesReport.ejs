        // Function to fetch and display sales data based on the selected type
        async function showSales(type) {
            console.log('Script is running...');
    
            let url = `/admin/reportUpdate?type=${type}`;
    
            // Add logic to handle custom date range if applicable
            if (type === 'custom') {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                url += `&startDate=${startDate}&endDate=${endDate}`;
            }
    
            try {
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
    
                const data = await response.json();
    
                // Update the table with the fetched data
                updateTable(data);
            } catch (error) {
                console.error('Error fetching sales data:', error);
            }
        }
    
        // Function to update the table with sales data
        function updateTable(data) {
    const tbody = document.getElementById('salesTable').getElementsByTagName('tbody')[0];
    tbody.innerHTML = '';

    const { orderData, totalRevenue } = data;

    orderData.forEach((order, index) => {
        const row = `
            <tr>
                <td>${index + 1}</td>
                <td>${order.createdOn.split('T')[0]}</td>
                <td>${order._id}</td>
                <td>${order.paymentMethod}</td>
                <td>${order.orderStatus}</td>
                <td>$${order.grandTotal.toFixed(2)}</td>
            </tr>`;
        tbody.insertAdjacentHTML('beforeend', row);
    });

    const revenueSpan = document.querySelector('.card-title + span');
    revenueSpan.textContent = `$${totalRevenue.toFixed(2)}`;
}

    
    </script>
    <script>
function downloadSalesReportPDF() {
    const element = document.getElementById('salesTable');
    const totalRevenueElement = document.querySelector('.card-title + span');

    // Get the total revenue value
    const totalRevenue = parseFloat(totalRevenueElement.textContent.replace('$', ''));

    // Create a div to hold additional information
    const additionalInfoDiv = document.createElement('div');

    // Create an element for the company name
    const companyName = document.createElement('h2');
    companyName.textContent = 'Your Company Name';
    additionalInfoDiv.appendChild(companyName);

    // Create an element for the total revenue
    const totalRevenueElementInPDF = document.createElement('p');
    totalRevenueElementInPDF.textContent = `Total Revenue: $${totalRevenue.toFixed(2)}`;
    additionalInfoDiv.appendChild(totalRevenueElementInPDF);

    // Insert the additional info div before the salesTable
    element.parentNode.insertBefore(additionalInfoDiv, element);

    // Generate the PDF
    html2pdf(element);

    // Remove the additional info div after generating the PDF
    additionalInfoDiv.remove();
}



