    <script>
        function validate() {
            const nameInput = document.getElementById('name');
            const nameError = document.getElementById('nameError');

            if (nameInput.value.trim() === '') {
                nameError.innerHTML = 'Field is required';
                nameError.style.color = 'red';
                setTimeout(() => {
                    nameError.innerHTML = ''; // Reset the error message for name
                }, 5000);
                return false;
            }

            if (nameInput.value.length > 10) {
                nameError.innerHTML = 'Max character limit is 10';
                nameError.style.color = 'red';
                setTimeout(() => {
                    nameError.innerHTML = ''; // Reset the error message for name
                }, 5000);
                return false; // Return false to prevent form submission
            }

            return true; // Return true if validation passes
        }



    </script>
    <script>
        function toggleCategory(categoryId) {
        const checkbox = document.querySelector(`#input_${categoryId}`);

        // Send a fetch request to /admin/deleteProduct based on the checkbox state
        fetch('/admin/deleteCategory', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ id: categoryId }),
        })
            .then(response => {
                if (!response.success) {
                    throw new Error('Network response was not ok');
                }
                // return response.json()
                

            })
            .then(data => {
                // Handle the JSON response if needed
                console.log(data);

                // Update the checkbox state based on the response
                if (data.success) {
                    checkbox.checked = !checkbox.checked;
                } else {
                    console.error('Failed to toggle category status');
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
            });
    }
    </script>






